@model PolySondage.Services.Models.AuthViewModels

@{
    ViewData["Title"] = "Connect";
}

<h1>Connexion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Connect">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="mail" class="control-label">Email</label>
                <input asp-for="mail" class="form-control" />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mdp" class="control-label">Mot de Passe</label>
                <input asp-for="mdp" class="form-control" />
                <span asp-validation-for="mdp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="connexion" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Auth" asp-action="Inscription">Pas de compte ? Inscrivez-vous</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
